extends ../layouts/common
block content
  h1 Users
  a.btn.btn-primary(href='/users/create') New User

  form(action="/users/search", method="GET", class='d-flex')
    input(type="text", name="q", value= q, class='form-control')
    button(class='btn btn-primary ml-2') Search

  table.table
    tr
      th Name
      th Phone
      th Action

    each item in users
      tr
        td= item.name
        td= item.phone
        td
          a.btn.btn-light(href="/users/" + item.id) View